{% schema %}
{
  "name": "Image banner",
  "class": "section--has-background",
  "blocks": [{ "type": "@theme" }, { "type": "@app" }],
  "settings": [
    {
      "type": "image_picker",
      "id": "first_image",
      "label": "First image"
    },
    {
      "type": "image_picker",
      "id": "second_image",
      "label": "Second image"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay opacity",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 20
    },
    {
      "type": "spacing_panel",
      "id": "spacing",
      "label": "Spacing",
      "default": {
        "padding": "100px 20px"
      }
    },
    {
      "type": "layout_panel",
      "id": "layout",
      "label": "Layout",
      "default": {
        "flex-direction": "row",
        "gap": "20px",
        "justify-content": "center",
        "align-items": "center",

        "@media (--mobile)": {
          "flex-wrap": "wrap"
        }
      }
    },
    {
      "type": "header",
      "content": "Color"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    }
  ],
  "presets": [
    {
      "name": "Image banner",
      "settings": {
        "color_scheme": "scheme-4"
      },
      "blocks": [
        {
          "type": "group",
          "settings": {
            "layout": {
              "flex-direction": "column"
            },
            "size": {
              "width": "50%",
              "flex-grow": "0",

              "@media (--mobile)": {
                "width": "100%"
              }
            },
            "spacing": {
              "padding": "50px",

              "@media (--mobile)": {
                "padding": "20px"
              }
            }
          },
          "blocks": [
            {
              "type": "text",
              "settings": {
                "text": "<h1>Browse our latest products</h1>"
              }
            },
            {
              "type": "text",
              "settings": {
                "text": "<p>Give customers details about the banner image(s) or content on the template.<\/p>"
              }
            },
            {
              "type": "link",
              "settings": {
                "link": "#",
                "label": "Shop all",
                "style_class": "button-secondary",
                "spacing": {
                  "padding": "10px 30px"
                },
                "size": {
                  "width": "auto"
                }
              }
            }
          ]
        }
      ]
    }
  ]
}
{% endschema %}